<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.32"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="serif"
                        android:text="Abfahrtszeit"
                        android:textColor="@color/mr_and_mrs_jones"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView68"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        tools:text="Verspätung" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.68"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView57"
                        style="@style/textViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:fontFamily="serif"
                        android:textColor="@color/mr_and_mrs_jones"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Abfahrtsort " />

                    <TextView
                        android:id="@+id/textView58"
                        style="@style/textViewStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginRight="2dp"
                        android:fontFamily="serif"
                        android:textColor="@color/mr_and_mrs_jones"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Gleis" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mr_and_mrs_jones" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.32"
                    android:orientation="horizontal">

                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/BootstrapButton29"
                        style="@style/wrapping_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dp"
                        android:elegantTextHeight="false"
                        android:gravity="center_vertical"
                        app:bootstrapSize="sm"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:roundedCorners="true"
                        app:typicon="ty_arrow_down"
                        tools:text="Details" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="2dp"
                        android:contentDescription="Icon" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="0.68"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView61"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:fontFamily="serif"
                        android:textColor="@color/mr_and_mrs_jones"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Linie" />

                    <TextView
                        android:id="@+id/textView62"
                        style="@style/textViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="2dp"
                        android:fontFamily="serif"
                        android:textColor="@color/mr_and_mrs_jones"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:text="Ziel der Linie" />

                    <com.beardedhen.androidbootstrap.BootstrapButton
                        android:id="@+id/BootstrapButton36"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:backgroundTintMode="src_over"
                        android:clickable="true"
                        android:fontFamily="serif"
                        android:hapticFeedbackEnabled="false"
                        android:longClickable="false"
                        android:minWidth="@android:dimen/thumbnail_width"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="visible"
                        app:bootstrapBrand="regular"
                        app:bootstrapSize="lg"
                        app:bootstrapText="@string/maps"
                        app:roundedCorners="true"
                        app:showOutline="false"
                        tools:visibility="visible" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mr_and_mrs_jones" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"></androidx.recyclerview.widget.RecyclerView>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/mr_and_mrs_jones" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.32"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView60"
                            style="@style/textViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:text="Ankunftszeit"
                            android:textColor="@color/mr_and_mrs_jones"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView69"
                            style="@style/textViewStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            tools:text="Verspätung" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.68"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView63"
                            style="@style/textViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:fontFamily="serif"
                            android:textColor="@color/mr_and_mrs_jones"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="Zielort" />

                        <TextView
                            android:id="@+id/textView59"
                            style="@style/textViewStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:textColor="@color/mr_and_mrs_jones"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            tools:text="Gleis" />
                    </LinearLayout>

                </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/mr_and_mrs_jones" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>