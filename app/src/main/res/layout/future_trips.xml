<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        style="@style/textViewStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="@color/mr_and_mrs_jones"
        android:gravity="center"
        android:text="@string/zukunftige_fahrten"
        android:textColor="#9EC1D4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView5">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/BootstrapButton15"
            style="@style/wrapping_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:elegantTextHeight="false"
            android:text="gfh"
            app:bootstrapSize="xl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundedCorners="true"
            app:typicon="ty_times" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/BootstrapButton16"
            style="@style/wrapping_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:elegantTextHeight="false"
            android:text="gfh"
            app:bootstrapSize="xl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundedCorners="true"
            app:typicon="ty_plus" />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/BootstrapButton17"
            style="@style/wrapping_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:elegantTextHeight="false"
            android:text="gfh"
            app:bootstrapSize="xl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:roundedCorners="true"
            app:typicon="ty_arrow_forward" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>