<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Multiple_routes">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="210dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/multiple_routes_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mr_and_mrs_jones"
                android:fontFamily="serif"
                android:gravity="center"
                android:text="@string/eine_fahrt"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="#9EC1D4"
                android:textStyle="bold"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/date_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="205dp"
                    android:backgroundTintMode="src_over"
                    android:clickable="false"
                    android:fontFamily="serif"
                    android:hapticFeedbackEnabled="false"
                    android:longClickable="false"
                    android:textSize="14sp"
                    android:visibility="visible"
                    app:bootstrapBrand="regular"
                    app:bootstrapSize="lg"
                    app:bootstrapText="@string/datum"
                    app:roundedCorners="true"
                    app:showOutline="false"
                    android:textStyle="bold"
                    tools:visibility="visible">

                </com.beardedhen.androidbootstrap.BootstrapButton>

                <EditText
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:inputType="date" />

            </LinearLayout>

            <View
                android:id="@+id/divider6"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="2dp"
                android:background="@color/mr_and_mrs_jones" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:orientation="horizontal">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/an_abfahrt_button_einzelne_verbindung"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="205dp"
                    android:backgroundTintMode="src_over"
                    android:clickable="true"
                    android:fontFamily="serif"
                    android:hapticFeedbackEnabled="false"
                    android:longClickable="false"
                    android:textSize="14sp"
                    android:visibility="visible"
                    app:bootstrapBrand="regular"
                    app:bootstrapSize="lg"
                    app:bootstrapText="@string/abfahrt"
                    app:roundedCorners="true"
                    app:showOutline="false"
                    tools:visibility="visible">

                </com.beardedhen.androidbootstrap.BootstrapButton>

                <EditText
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:inputType="time" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="2dp"
                android:background="@color/mr_and_mrs_jones" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/start_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="105dp"
                    android:backgroundTintMode="src_over"
                    android:clickable="false"
                    android:fontFamily="serif"
                    android:hapticFeedbackEnabled="false"
                    android:longClickable="false"
                    android:textSize="14sp"
                    android:visibility="visible"
                    app:bootstrapBrand="regular"
                    app:bootstrapSize="lg"
                    app:bootstrapText="@string/start"
                    app:roundedCorners="true"
                    app:showOutline="false"
                    android:textStyle="bold"
                    tools:visibility="visible">

                </com.beardedhen.androidbootstrap.BootstrapButton>

                <EditText
                    android:id="@+id/start_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:ems="10"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="2dp"
                android:background="@color/mr_and_mrs_jones" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/stopover_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="105dp"
                    android:backgroundTintMode="src_over"
                    android:clickable="false"
                    android:fontFamily="serif"
                    android:hapticFeedbackEnabled="false"
                    android:longClickable="false"
                    android:textSize="14sp"
                    android:visibility="visible"
                    app:bootstrapBrand="regular"
                    app:bootstrapSize="lg"
                    app:bootstrapText="@string/zwischenhalt"
                    app:roundedCorners="true"
                    app:showOutline="false"
                    android:textStyle="bold"
                    tools:visibility="visible">

                </com.beardedhen.androidbootstrap.BootstrapButton>

                <EditText
                    android:id="@+id/stopover_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="2dp"
                android:background="@color/mr_and_mrs_jones" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/destination_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:width="105dp"
                    android:backgroundTintMode="src_over"
                    android:clickable="false"
                    android:fontFamily="serif"
                    android:hapticFeedbackEnabled="false"
                    android:longClickable="false"
                    android:textSize="14sp"
                    android:visibility="visible"
                    app:bootstrapBrand="regular"
                    app:bootstrapSize="lg"
                    app:bootstrapText="@string/ziel"
                    app:roundedCorners="true"
                    app:showOutline="false"
                    android:textStyle="bold"
                    tools:visibility="visible">

                </com.beardedhen.androidbootstrap.BootstrapButton>

                <EditText
                    android:id="@+id/destination_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:inputType="textPersonName" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="2dp"
                android:background="@color/mr_and_mrs_jones" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="194dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:width="210dp"
                    android:fontFamily="serif"
                    android:text="@string/erwachsene_anzahl"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/num_adult"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:inputType="number"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="2dp"
                android:background="@color/mr_and_mrs_jones" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:width="210dp"
                    android:fontFamily="serif"
                    android:text="@string/kinder_anzahl"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/num_children"
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:fontFamily="serif"
                    android:textStyle="bold"
                    android:inputType="number" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_margin="2dp"
                android:background="@color/mr_and_mrs_jones" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                tools:layout_editor_absoluteX="-5dp"
                tools:layout_editor_absoluteY="407dp">

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/cancel_button"
                    style="@style/wrapping_button"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_margin="2dp"
                    android:elegantTextHeight="false"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="gfh"
                    app:bootstrapSize="xl"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:roundedCorners="true"
                    app:typicon="ty_times" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/settings_button"
                    style="@style/wrapping_button"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_margin="2dp"
                    android:elegantTextHeight="false"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="gfh"
                    app:bootstrapSize="xl"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:roundedCorners="true"
                    app:typicon="ty_cog_outline" />

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/accept_button"
                    style="@style/wrapping_button"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_margin="2dp"
                    android:elegantTextHeight="false"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="gfh"
                    app:bootstrapSize="xl"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:roundedCorners="true"
                    app:typicon="ty_media_play" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>